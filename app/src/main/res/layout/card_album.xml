<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="180dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardViewBackgroundColor">

            <ImageView
                android:id="@+id/imgAlbumCover"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/album_cover"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvAlbumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAlbumCover"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Kimi no na wa"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAlbumName"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="RAPWINS"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btnMoreOption"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/more_options"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                app:srcCompat="@drawable/ic_more_vert_white_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

